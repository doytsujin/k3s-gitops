  reload
  loadbalance
  cache 300
  loop
  local
  hosts {
    192.168.10.11 pve01.{{ SECRET_DOMAIN }}
    192.168.10.15 tower.{{ SECRET_DOMAIN }}
    192.168.10.31 k3s-ma-01.{{ SECRET_DOMAIN }}
    192.168.10.32 k3s-ma-02.{{ SECRET_DOMAIN }}
    192.168.10.33 k3s-ma-03.{{ SECRET_DOMAIN }}
