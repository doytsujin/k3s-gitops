    192.168.10.43 k3s-wo-03.{{ SECRET_DOMAIN }}
    192.168.10.80 ansible.{{ SECRET_DOMAIN }}
    192.168.10.81 mysql.{{ SECRET_DOMAIN }}
    192.168.10.82 prostresql.{{ SECRET_DOMAIN }}
    192.168.10.83 minio.{{ SECRET_DOMAIN }}
